{
    "name": "LinkedInPlus",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Figure out where I've already applied",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "<all_urls>", 
        "storage", 
        "webNavigation"
    ], 
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["contentScript.js"]
        }
    ], 
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}